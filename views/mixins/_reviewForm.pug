mixin reviewForm(store)
  form.reviewer(method="POST" action=`/reviews/${store._id}`)
    textarea(name="text" placeholder="Whaddaya think jabroni...")
    .reviewer__meta
      .reviewer__stars
        each num in [5,4,3,2,1]
          input(type="radio" required name="rating" value=num id=`star${num}`)
          label(for=`star${num}`) #{num} Stars
      input.button(type="submit" value="Submit Review âž¡")